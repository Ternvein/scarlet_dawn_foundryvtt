
{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./module/*"]
    },
    "types": ["@league-of-foundry-developers/foundry-vtt-types", "@ethaks/fvtt-quench"]
  },
  "include": ["**/*.mjs", "**/*.js", "foundry", "**/*.d.ts"],
  "exclude": ["node_modules", "dist", "foundry/node_modules"]
}

